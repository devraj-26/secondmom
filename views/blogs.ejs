.container {
    max-width: 100%;
}

section .container{
    padding-bottom: 0px !important;
    padding-top: 0px !important;
    /* padding-bottom: 100px; */

}

@media (max-width: 480px) {
    .blog-card {
        flex: 0 0 100%; /* Makes each card take full width */
        width: 100% !important;
    }
}



