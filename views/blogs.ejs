        <section class="section-blog-2 position-relative section-padding fix" style="background-color: #fff7ed;">
            <div class="container">
                <div class="blog-card-container">
                    <% posts.filter(item => item.category !== "EVENT").reverse().forEach(item => { 
                        const imageUrl = `${process.env.S3_BASE_URL + item.banner.image}`;
                    %>
                    <div class="blog-card" >
                        <img src="<%= imageUrl %>" alt="blog image" style="object-fit: cover;">
                        <h6 class="blog-title">
                            <a href="blog/<%= item.seoDetails.slug %>">
                                <%= item.title.length > 70 ? item.title.substring(0, 70) + '...' : item.title %>
                            </a>
                        </h6>
                    </div>
                    <% }); %>
                </div>
            </div>
        </section>
        <style>
            <style>
    .blog-card {
        transition: all 0.3s ease-in-out; /* Smooth transition effect */
    }

    .blog-card:hover {
        transform: translateY(-5px); /* Slight lift effect */
        box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.15); /* Softer shadow */
    }

    .blog-title a {
        transition: color 0.3s ease-in-out; /* Smooth color transition */
        text-decoration: none;
        color: inherit; /* Maintain default color */
    }

    .blog-card:hover .blog-title a {
        color: #e49b1c; /* Change title text color on hover */
    }
</style>

