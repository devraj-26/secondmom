<main>
    <section class="section-team-1 section-padding">
        <div class="container">
            <div class="text-center mt-6">
                <div class="button-group filter-button-group">
                    <button class="btn-filter active" data-filter="*">All Media</button>
                    <% galleryTitles?.forEach(item => { %>
                        <% if (imageGalleries?.some(gallery => gallery._id === item._id && gallery.mediaDetails?.mediaType === 'IMAGE')) { %>
                            <button class="btn-filter" data-filter=".<%= item?._id %>"><%= item?.title %></button>
                        <% } %>
                    <% }) %>
                </div>
            </div>
        </div>

        <div class="container mt-6">
            <div class="gallery-grid">
                <% imageGalleries?.forEach(item => { %>
                    <% if (item?.mediaDetails?.mediaType === 'IMAGE') { %>
                        <% item?.mediaDetails?.images.forEach(image => { %>
                            <div class="filter-item <%= item._id %>">
                                <div class="project-item">
                                    <a href="#" class="gallery-item" data-image="<%= process.env.S3_BASE_URL + image %>">
                                        <img src="<%= process.env.S3_BASE_URL + image %>" alt="gallery-images" />
                                    </a>
                                </div>
                            </div>
                        <% }) %>
                    <% } %>
                <% }) %>
            </div>
        </div>

        <!-- Custom Lightbox -->
        <div id="customLightbox" tabindex="-1">
            <div id="lightboxContent">
                <button id="closeBtn">&times;</button>
                <img id="lightboxImg" src="" alt="Popup Image">
                <div id="imageCounter"></div>
                <div class="controls">
                    <button id="prevBtn" class="lightbox-btn">&#10094;</button>
                    <button id="nextBtn" class="lightbox-btn">&#10095;</button>
                </div>
            </div>
        </div>

        <script>
            document.addEventListener("DOMContentLoaded", function () {
                // Album Filteration Fix
                const filterButtons = document.querySelectorAll(".btn-filter");
                const filterItems = document.querySelectorAll(".filter-item");

                filterButtons.forEach(button => {
                    button.addEventListener("click", function () {
                        filterButtons.forEach(btn => btn.classList.remove("active"));
                        this.classList.add("active");

                        const filterValue = this.getAttribute("data-filter");

                        filterItems.forEach(item => {
                            if (filterValue === "*" || item.classList.contains(filterValue.substring(1))) {
                                item.style.display = "inline-block";
                            } else {
                                item.style.display = "none";
                            }
                        });
                    });
                });

                // Lightbox Functionality Fix
                const galleryItems = document.querySelectorAll(".gallery-item");
                const lightbox = document.getElementById("customLightbox");
                const lightboxImg = document.getElementById("lightboxImg");
                const closeBtn = document.getElementById("closeBtn");
                const prevBtn = document.getElementById("prevBtn");
                const nextBtn = document.getElementById("nextBtn");
                const imageCounter = document.getElementById("imageCounter");
                let currentIndex = 0;
                let images = [];

                galleryItems.forEach((item, index) => {
                    images.push(item.dataset.image);
                    item.addEventListener("click", function (e) {
                        e.preventDefault();
                        currentIndex = index;
                        updateLightbox();
                        lightbox.style.display = "flex";
                        lightbox.focus();
                    });
                });

                function updateLightbox() {
                    lightboxImg.src = images[currentIndex];
                    imageCounter.innerText = `${currentIndex + 1} of ${images.length}`;
                }

                closeBtn.addEventListener("click", () => lightbox.style.display = "none");
                nextBtn.addEventListener("click", () => { currentIndex = (currentIndex + 1) % images.length; updateLightbox(); });
                prevBtn.addEventListener("click", () => { currentIndex = (currentIndex - 1 + images.length) % images.length; updateLightbox(); });

                document.addEventListener("keydown", (e) => {
                    if (lightbox.style.display === "flex") {
                        if (e.key === "ArrowRight") nextBtn.click();
                        if (e.key === "ArrowLeft") prevBtn.click();
                        if (e.key === "Escape") closeBtn.click();
                    }
                });
            });
        </script>
    </section>
</main>

