<!-- Blog Section -->
<div class="blog-section section-padding pt-60 pb-70">
    <div class="container">
        <div class="row border-bottom">
            <div class="col-xl-7 col-lg-8">
                <div class="section-title text-up">
                    <h2>Blogs<span><%= posts.length %></span></h2>
                </div>
            </div>
            <div class="col-xl-5 col-lg-4">
                <div class="right-content text-lg-end">
                    <p>As the complexity of buildings to increase, the field of architecture became multi-disciplinary with technological expertise and discpline.
                    </p>
                </div>
            </div>
        </div>
        <div class="row mt-40">
            <% posts?.slice(0, 6)?.forEach(item => { %>
            <div class="col-xl-4 col-lg-4 col-md-6 col-12 wow fadeInUp animated" data-wow-delay="200ms">
                <a href="blog-details?slug=<%= item.seoDetails.slug%>">
                <div class="single-blog-item">
                    <div class="blog-bg">
                        <img src="<%= process.env.S3_BASE_URL + item.coverImage %>" alt="">
                    </div>
                    <div class="blog-content">                        
                        <div class="blog-meta">
                            <p><%= postType %></p>
                        </div>
                        <h3><a href="blog-details?slug=<%= item.seoDetails.slug%>"><%= item.title %></a></h3>
                        <div class="blog-info">
                            <div class="blog-author">
                                <p><%= item.subTitle %></p>
                            </div>
                            <!-- <div class="blog-date">
                                <p>May 1, 2024</p>
                            </div> -->
                        </div>                            
                    </div>                        
                </div>
                </a>
            </div>
            <% }) %>          
        </div>            
    </div>
 </div>